<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>WarGameServerREST</servlet-name>
        <servlet-class>
            org.glassfish.jersey.servlet.ServletContainer
        </servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name><!--org.glassfish.jersey.config.property.packages-->
            <param-value>bb.rackmesa.wgsserver;com.fasterxml.jackson.jaxrs</param-value>
        </init-param>
        <!--<init-param>-->
            <!--<param-name>jersey.config.server.provider.classnames</param-name>-->
            <!--<param-value>com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider</param-value>-->
        <!--</init-param>-->
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>WarGameServerREST</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>


    <listener>
        <listener-class>bb.rackmesa.wgsserver.StartupConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>

    <filter>
        <filter-name>ShiroFilter</filter-name>
        <filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
    </filter>   

    <filter-mapping>
        <filter-name>ShiroFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
</web-app>